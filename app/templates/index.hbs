<h1>Today's Top Stories</h1>


<ul>
  {{#each model.blogs as |blog|}}
     <li><h3>{{blog.heading}}</h3><img src={{blog.image}} width=500px height=200px><h4>{{blog.topic}}</h4> {{blog.starter}}<br>{{blog.date}}<br>{{blog.rate}}
       {{blog-tile blog=blog}}</li>
  {{/each}}
</ul>



