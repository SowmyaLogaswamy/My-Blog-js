{{#if updateBlogForm}}
  <h4>Update {{blog.heading}} of topic {{blog.type}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="topic">Topic</label>
        {{input value=topic id="topic" placeholder=blog.topic}}
      </div>

      <div class="form-group">
        <label for="heading">Heading</label>
        {{input value=heading id="heading" placeholder=blog.heading}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=blog.image}}
      </div>

      <div class="form-group">
        <label for="rate">Cost</label>
        {{input value=rate id="rate" placeholder=blog.rate}}
      </div>

      <div class="form-group">
        <label for="date">Posted on </label>
        {{input value=date id="date" placeholder=blog.date}}
      </div>

      <button class="btn btn-primary" {{action 'update' blog}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'updateBlogForm'}}>Update</button>
{{/if}}
