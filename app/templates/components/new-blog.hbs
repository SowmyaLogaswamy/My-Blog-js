{{#if addNewBlog}}
<h1>New Blog</h1>
<div>
 <form>
   <div class="form-group">
     <label for="topic">Topic</label>
     {{input value=topic id="topic"}}
   </div>
   <div class="form-group">
     <label for="image">Image</label>
     {{input value=image id="image"}}
   </div>

   <div class="form-group">
     <label for="content">Content</label>
     {{input value=content id="content"}}
   </div>

   <div class="form-group">
     <label for="starter">Starter</label>
     {{input value=starter id="starter"}}
   </div>

   <div class="form-group">
     <label for="rate">Rate</label>
     {{input value=rate id="rate"}}
   </div>

   <div class="form-group">
     <label for="date">Date</label>
     {{input value=date id="date"}}
   </div>

   <button {{action 'saveBlog1'}}>Save</button>
 </form>
</div>
{{else}}
  <button {{action 'blogFormShow'}}>New Blog</button>
{{/if}}
